!!!
%html
	%head
		%title OnPrem

		%meta{content: "width=device-width,initial-scale=1.0", name: "viewport"}/

		%link{href: "http://fonts.googleapis.com/css?family=Roboto|Roboto+Condensed|Alegreya:700|Oswald:700|Droid+Serif:400,700italic|Rokkitt:700|Coustard:900|Bitter:900", rel: "stylesheet", type: "text/css"}/

		= stylesheet_link_tag    "application", :media => "all"
		= javascript_include_tag "application"
		= csrf_meta_tags
	%body
		=render "layouts/navbar"
		- if controller_name != 'home'
			.main
				.flash
					-flash.each do |name, msg|
						=content_tag :div, msg, id: "flash_#{name}"
				= yield
		- else
			.flash
				-flash.each do |name, msg|
					=content_tag :div, msg, id: "flash_#{name}"
			=yield
		.footer
			.footer-logo
				= image_tag("OnPrem_Logo_White.png")
			.footer-nav
				= render "layouts/navlinks"