%title Our Team | OnPrem

.main
  %h1
    Team
  %p.description
    The hard-hitting experts who are changing the face of entertainment.
  .combo-filters.sort-and-filter
    %p.filter-label
      Filter by School:
    .filter.option-set{:data => {:filter_group => "school"}}
      %a.selected{:href => "#filter-school-any", :data => {:filter_value => ""}}
        Show All
      - for school in @schools
        %a{href: "#filter-school-#{school.name.parameterize}", data: {:filter_value => ".#{school.name.parameterize}"}}
          = school.name
    %p.filter-label
      Filter by Title:
    .filter.option-set{:data => {:filter_group => "title"}}
      %a.selected{:href => "#filter-title-any", :data => {:filter_value => ""}}
        Show All
      - for title in @titles
        %a{href: "#filter-title-#{title.parameterize}", data: {:filter_value => ".#{title.parameterize}"}}
          = title
  .person-container
    -for person in @people
      .person{:class => person.filter_tags}
        .person-image
          = image_tag person.gravatar_url(size: 140, default: 'wavatar')
          .person-info
            .person-name
              = "#{person.first_name} #{person.last_name}"
            .person-title
              = person.title
            .icons
              - if !person.linkedin.empty?
                %a{:title => "#{person.first_name}'s linkedin", :href => person.linkedin}
                  %span.icon
                    %i.square-bg
                    %i.linkedin
              -if !person.twitter.empty?
                %a{:title => "#{person.first_name}'s twitter", :href => person.twitter}
                  %span.icon
                    %i.square-bg
                    %i.twitter
              -if !person.email.empty?
                %a{:title => "#{person.first_name}'s email", :href => "mailto:#{person.email}"}
                  %span.icon
                    %i.square-bg
                    %i.email
              -if !person.github.empty?
                %a{:title => "#{person.first_name}'s github", :href => person.github}
                  %span.icon
                    %i.square-bg
                    %i.github


        / .project-client
        /   = image_tag project.logo_url(:thumb) if project.logo?