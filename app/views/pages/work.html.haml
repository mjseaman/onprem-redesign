%title "Our Work | OnPrem"
.main
  %h1
    Project Work
  .sort-and-filter
    %p.filter-label
      Filter by Industry:
    %ul#filters.project-filter-list
      %li.project-filter
        %a{:href => "#", :data => {:filter => "*"}}
          Show All
      - for industry in @industries
        %li.project-filter
          %a{href: "#", data: {:filter => ".#{industry.name.downcase}"}}
            = industry.name
  .project-container
    -for project in @projects
      .project{:class => "#{project.industry.name.downcase if project.industry}"}
        .project-image
          = image_tag project.image_url(:thumb) if project.image?
          .project-title
            = project.title
        .project-client
          = image_tag project.logo_url(:thumb) if project.logo?