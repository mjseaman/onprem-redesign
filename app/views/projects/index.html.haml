- title "Projects"

%h1
  Project Work
.project-container
  -for project in @projects
    .project
      .project-image
        = image_tag project.image_url(:thumb) if project.image?
        .project-title
          = project.title
      .project-client
        = image_tag project.logo_url(:thumb) if project.logo?
%h1
  Edit (Admin Only)
%table
  %tr
    %th Title
    %th Client
    %th Caption
    %th Description
  - for project in @projects
    %tr
      %td= project.title
      %td= project.client
      %td= project.caption
      %td= project.description
      %td= link_to 'Show', project
      %td= link_to 'Edit', edit_project_path(project)
      %td= link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Project", new_project_path