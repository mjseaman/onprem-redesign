- title "Project"

%h1= @project.title

%p
  %strong Title:
  = @project.title
%p
  %strong Client:
  = @project.client
%p
  %strong Caption:
  = @project.caption
%p
  %strong Description:
  = @project.description
%p
  %strong Image:
  .preview-img
    = image_tag @project.image_url(:thumb) if @project.image?
    #{"None" if !@project.image?}
%p
  %strong Logo:
  .preview-img
    = image_tag @project.logo_url(:thumb) if @project.logo?
    #{"None" if !@project.logo?}
%p
  -if can? :edit, @project
    = link_to "Edit", edit_project_path(@project)
  -if can? :destroy, @project
    = link_to "Destroy", @project, :confirm => 'Are you sure?', :method => :delete
  = link_to "View All", projects_path
