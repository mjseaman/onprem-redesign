- title "Projects"

%h1
  Project Work
.sort-and-filter
  %p.filter-label
    Filter by Industry:
  %ul#filters.project-filter-list
    %li.project-filter
      %a{:href => "#", :data => {:filter => "*"}}
        Show All
    - for industry in @industries
      %li.project-filter
        %a{href: "#", data: {:filter => ".#{industry.name.downcase}"}}
          = industry.name
.project-container
  -for project in @projects
    .project{:class => "#{project.industry.name.downcase if project.industry}"}
      .project-image
        = image_tag project.image_url(:thumb) if project.image?
        .project-title
          = project.title
      .project-client
        = image_tag project.logo_url(:thumb) if project.logo?
%h1
  Edit (Admin Only)
%table
  %tr
    %th Title
    %th Client
    %th Caption
    %th Description
    %th Industry
  - for project in @projects
    %tr
      %td= project.title
      %td= project.client
      %td= project.caption
      %td= project.description
      %td= project.industry.name if project.industry
      %td= link_to 'Show', project
      %td= link_to 'Edit', edit_project_path(project)
      %td= link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Project", new_project_path