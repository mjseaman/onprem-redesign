%title Our Team | OnPrem

.main
  %h1
    Team
  %p.description
    The hard-hitting experts who are changing the face of entertainment.
  .sort-and-filter
    %p.filter-label
      Filter by Alma Mater:
    %ul#filters.filter-list
      %li.filter
        %a{:href => "#", :data => {:filter => "*"}}
          Show All
      - for alma_mater in @alma_maters
        %li.filter
          %a{href: "#", data: {:filter => ".#{alma_mater.downcase}"}}
            = alma_mater
  .person-container
    -for person in @people
      .person{:class => "#{person.alma_mater.downcase if person.alma_mater}"}
        .person-image
          = image_tag person.gravatar_url(size: 160, default: 'wavatar')
          .person-info
            .person-name
              = "#{person.first_name} #{person.last_name}"
            .person-title
              = person.title
            .icons
              - if person.linkedin > ""
                %a{:title => "linkedin", :href => person.linkedin}
                  %span.icon
                    %i.square-bg
                    %i.linkedin
              %span.icon
                %i.square-bg
                %i.twitter
              %span.icon
                %i.square-bg
                %i.email
            -if person.github > ""
              %a{:title => "github", :href => person.github}
                %span.icon
                  %i.square-bg
                  %i.github


        / .project-client
        /   = image_tag project.logo_url(:thumb) if project.logo?