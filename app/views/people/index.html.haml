- title "People"

%h1 People
%table
  %tr
    %th Photo
    %th First name
    %th Last name
    %th Title
    %th Email
  - for person in @people
    %tr
      %td= image_tag person.gravatar_url(:size => 48, default: 'wavatar')
      %td= person.first_name
      %td= person.last_name
      %td= person.title
      %td= person.email
      %td= link_to 'Show', person, :class => "primary-button"
      %td= link_to 'Edit', edit_person_path(person), :class => "info-button"
      %td= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete, :class => "danger-button"

%p= link_to "New Person", new_person_path
