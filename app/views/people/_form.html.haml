= form_for @person do |f|
  = f.error_messages
  %p
    = f.label :first_name
    %br
    = f.text_field :first_name
  %p
    = f.label :last_name
    %br
    = f.text_field :last_name
  %p
    = f.label :bio
    %br
    = f.text_field :bio
  %p
    = f.label :alma_mater
    %br
    = f.text_field :alma_mater
  %p
    = f.label :linkedin
    %br
    = f.text_field :linkedin
  %p
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.submit
